#item-2:checked ~ .cards #service-1,
#item-3:checked ~ .cards #service-2,
#item-4:checked ~ .cards #service-3,
#item-5:checked ~ .cards #service-4,
#item-6:checked ~ .cards #service-5 {
    transform: translateX(-80%) scale(0.8);
    opacity: 0.8;
    z-index: 0;
    display: block;
}
#item-1:checked ~ .cards #service-1,
#item-2:checked ~ .cards #service-2,
#item-3:checked ~ .cards #service-3,
#item-4:checked ~ .cards #service-4,
#item-5:checked ~ .cards #service-5,
#item-6:checked ~ .cards #service-6 {
    transform: translateX(0) scale(1);
    opacity: 1;
    z-index: 1;
