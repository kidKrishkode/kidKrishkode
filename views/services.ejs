}
#item-1:checked ~ .cards #service-1:hover,
#item-2:checked ~ .cards #service-2:hover,
#item-3:checked ~ .cards #service-3:hover,
#item-4:checked ~ .cards #service-4:hover,
#item-5:checked ~ .cards #service-5:hover,
